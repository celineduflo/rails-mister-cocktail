<h1><%=  @cocktail.name%></h1>

<p><%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail) %></p>
<% id = @cocktail.id %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description%> of <%= dose.ingredient.name %>
    </li>
  <% end %>
  <%=  @cocktail.photo%>
  <%= cl_image_tag(@cocktail.photo, width: 400, height: 300, crop: :fill) %>
</ul>


